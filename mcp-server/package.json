{
  "name": "@news-site-coral/mcp-task-server",
  "version": "1.0.0",
  "description": "MCP server for News Site Coral task management - Create, manage, and track tasks through Claude Code",
  "private": false,
  "type": "module",
  "main": "build/index.js",
  "keywords": ["mcp", "task-management", "claude", "anthropic", "productivity", "news-site-coral"],
  "author": "News Site Coral Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/news-site-coral.git",
    "directory": "mcp-server"
  },
  "bugs": {
    "url": "https://github.com/your-username/news-site-coral/issues"
  },
  "homepage": "https://github.com/your-username/news-site-coral/tree/main/mcp-server#readme",
  "bin": {
    "news-site-task-mcp": "./build/index.js",
    "news-site-mcp": "./build/cli.js"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "dev": "npm run build && node build/index.js",
    "dev:http": "npm run build && node build/http-server.js",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "test": "npm run build",
    "prepack": "npm run build",
    "postinstall": "node -e \"console.log('\\nðŸŽ‰ News Site MCP Server installed successfully!\\n\\nTo get started:\\n1. Set your API credentials: news-site-mcp setup\\n2. Add to Claude: claude mcp add news-task -- npx @news-site-coral/mcp-task-server\\n\\nFor help: news-site-mcp --help\\n')\""
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.3"
  }
}