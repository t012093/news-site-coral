{
  "name": "coral-backend",
  "version": "1.0.0",
  "description": "Backend API for CORAL News Site",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "railway:build": "npm run build",
    "railway:start": "npm run start",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:reset": "npx prisma migrate reset"
  },
  "keywords": [
    "coral",
    "backend",
    "api",
    "postgresql"
  ],
  "author": "CORAL Team",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^22.5.0",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.16.3",
    "redis": "^4.7.1",
    "sharp": "^0.33.4",
    "socket.io": "^4.8.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.5.4",
    "uuid": "^11.1.0",
    "ws": "^8.18.0",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "eslint": "^9.9.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "tsx": "^4.17.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
