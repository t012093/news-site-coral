# Production Environment Variables
NODE_ENV=production
PORT=3001

# Database Configuration (PostgreSQL on Vercel/Supabase/etc.)
USE_REAL_DATABASES=true
DATABASE_URL=${DATABASE_URL}
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT}
DB_NAME=${DB_NAME}
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}

# Redis Configuration (Upstash Redis or similar)
REDIS_URL=${REDIS_URL}

# JWT Configuration (Production secrets)
JWT_SECRET=${JWT_SECRET}
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d

# Cookie Configuration
COOKIE_SECRET=${COOKIE_SECRET}

# CORS Configuration (Production frontend URL)
FRONTEND_URL=${FRONTEND_URL}

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info

# Trust proxy for Vercel/cloud deployments
TRUST_PROXY=true